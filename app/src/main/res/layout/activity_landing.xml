<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/first_page"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/sign_up_email_button"
        android:layout_centerHorizontal="true"
        android:layout_width="240dp"
        android:layout_height="@dimen/button_height_large"
        android:layout_above="@+id/login_button"
        android:background="@drawable/button_black_selector"
        android:clickable="true"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginBottom="20sp"
        android:onClick="signUpPageGo"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/lnd_sign_up"
            android:textColor="@android:color/white"
            android:textSize="@dimen/button_text_size"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/version"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@drawable/button_general_selector"
        android:clickable="true"
        android:gravity="center"
        android:onClick="loginPageGo"
        android:text="@string/lnd_have_account"
        android:textColor="@color/black"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/gray"
        android:textSize="8sp"/>

</RelativeLayout>